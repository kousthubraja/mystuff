<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/satelite"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_hint"
        android:layout_alignParentTop="true"
        android:layout_marginTop="93dp"
        android:layout_toLeftOf="@+id/register_register"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_blue_dark" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/register_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/register_register"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/register_username"
        android:layout_alignParentRight="true"
        android:alpha="90"
        android:onClick="register"
        android:text="Register"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/register_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_register"
        android:layout_alignParentLeft="true"
        android:text="Type in a unique username to begin"
        android:textColor="@android:color/holo_blue_dark" />

    <ProgressBar
        android:id="@+id/register_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/register_instr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/register_progressbar"
        android:layout_marginTop="48dp"
        android:text="Keep the GPS turned on to be visible  to others."
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>